[user]
  name  = Gus Bonfante
  email = gus@gbonfante.com
[color]
  ui = true
[core]
  editor = vim
  excludesfiles = ~/.gitignore
[push]
  default = simple
[help]
  autocorrect = 1
[alias]
  up  = pull --rebase --prune
  st  = status
  aa  = add --all
  ap  = add -p
  ci  = commit -v
  cm  = commit -m
  ca  = commit --amend
  co  = checkout
  cob = checkout -b
  di  = diff
  dc  = diff --cached
  lg  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  ls  = branch
  dd  = branch -D
[fetch]
  prune = true
